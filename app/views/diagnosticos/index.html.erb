<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#add-diagnostico">
	Nuevo Diagnostico
</button>

<h1>EAPB's</h1>
<%= form_tag(export_xls_diagnosticos_path, method: "post",  :multipart => true, "data-ajax" => "false" ) do %>

<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"></h3>
	</div>
	<div class="panel-body">
		<div class="table-responsive">
			<table id="table-result" class="table table-bordered table-hover table-striped tablesorter">
			  <thead>
			    <tr>
						<th data-sort="string">Nombre</th>
						<th data-sort="string">Cantidad (Horas) Limite Respuesta</th>
			      <th>Acción</th>
			    </tr>
			  </thead>
			  <tbody id="table-result-body">
					<% @diagnosticos.each do |diagnostico| -%>
						<tr class="success">
						    <td><%= diagnostico.nombre %></td>
								<td><%= diagnostico.cantidad_horas_limite %></td>
								<td>

									<%= link_to edit_diagnostico_path(diagnostico.id), :class => "btn btn-default", :title => "Editar Diagnostico" do %>
										<i class="fa fa-2x fa-pencil-square-o"></i> Editar
								  <% end %>

									<%= link_to diagnostico_path(diagnostico.id), method: :delete, :class => "btn btn-default", title:"Borrar Diagnostico", :data => { :confirm => 'Estas seguro? Este cambio no se puede revertir' } do %>
										<i class="fa fa-2x fa-trash-o"></i> Borrar
								  <% end %>

								</td>

						</tr>
					<% end -%>
			  </tbody>
			</table>
		</div>
	</div>
</div>
	<% if false -%>
		<%= submit_tag "✓Exportar Datos", :name => 'export_data' %>
	<% end -%>
<% end %>



<!-- ==========-=-=-=-=-=-=-=-=-=-= MODAL AGREGAR EAPB =-=-=-=-=-=-=-=-=-=-========== -->
	<div class="modal fade" id="add-diagnostico" tabindex="-1" role="dialog" aria-labelledby="add-edit-Label" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	        <h4 class="modal-title text-center" id="add-table-Label">Nuevo Diagnostico</h4>
	      </div>
	      <div class="modal-body">
	        <%= form_tag(diagnosticos_path, method: "post",  :multipart => true, "data-ajax" => "false" ) do %>

	          <div class="row">

							<div class="col-md-12">
	              <div class="form-group">
	                <p class="control-label">Nombre</p>
	                <%= text_field_tag(:nombre, "", :class =>"form-control") %>
	              </div>
	            </div>

							<div class="col-md-12">
	              <div class="form-group">
	                <p class="control-label">Cantidad Horas</p>
	                <%= number_field_tag(:cantidad_horas_limite, "1", min: 1, max: 24, step: 0.5, class: "form-control") %>
	              </div>
	            </div>

	            <div class="col-md-12">
	              <div class="form-group">
									<%= submit_tag "Crear", :class => "btn btn-default form-control" %>
	              </div>
	            </div>

	          </div>

	        <% end %>

	      </div>
	    </div>
	  </div>
	</div>
<!-- =-=-=-=-=-=-=-=-=-=-========== /MODAL AGREGAR EAPB ==========-=-=-=-=-=-=-=-=-=-= -->
