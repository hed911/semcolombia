function show_muestras(id){
  $.get("/institucion/caso_salud_publicas/" + id + "/muestras",
    {
    },function(result){
      $("#detalle-evento").modal('hide');
      $("#detalle-caso").modal('hide');
      setTimeout(function() {
        $('#modal').empty();
        $('#modal').append($.parseHTML( result ));
        $("#muestras").modal('show');
      }, 500);
  }, "text");
}

