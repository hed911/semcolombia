<%= form_tag(do_change_pass_crue_usuario_path, method: "patch",  :multipart => true, "data-ajax" => "false" ) do %>
<div class="container">
	<h1>Cambiar Contraseña <small><%= @usuario.primer_nombre %></small></h1>

	<ol class="breadcrumb">
	  <li class="active"><%= link_to "Usuarios", crue_usuarios_path %></li>
	</ol>

	<fieldset>
		<div class="clearfix">
			<%= label_tag(:password, "Contraseña:") %>
			<div class="input">
				<%= password_field_tag(:password, nil, :minlength => 8, class:"form-control") %>
			</div>
		</div>
	</fieldset>

	<fieldset>
		<div class="clearfix">
			<%= label_tag(:password_again, "Repita su Contraseña:") %>
			<div class="input">
				<%= password_field_tag(:password_again, nil, :minlength => 8, class:"form-control") %>
			</div>
		</div>
	</fieldset>

	<%= submit_tag("Guardar Cambios") %>

</div>

<% end %>


<script type="text/javascript">
	var password = new LiveValidation( "password", { validMessage: " ", wait: 500 } );
	password.add( Validate.Presence,
              { failureMessage: "Campo Requerido" } );
	password.add( Validate.Length, { minimum: 6 } );
	password.add( Validate.Length, { maximum: 40 } );

	var password_again = new LiveValidation( "password_again", { validMessage: " ", wait: 500 } );
	password_again.add( Validate.Presence,
              { failureMessage: "Campo Requerido" } );
	password_again.add( Validate.Length, { minimum: 6 } );
	password_again.add( Validate.Length, { maximum: 40 } );
	password_again.add( Validate.Confirmation, { match: 'password' } );

</script>
