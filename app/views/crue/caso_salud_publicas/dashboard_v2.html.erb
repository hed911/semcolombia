    }
  }
</style>
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Dashboard camas</h1>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>

<section class="content">
  <div class="container-fluid">
    <!-- Info boxes -->
    <div class="row">
      <% count = 0 -%>
      <% colors = ["primary", "danger", "warning", "primary"] -%>
      <% @response["camas"].each do |item| -%>
        <div class="col-12 col-sm-6 col-md-3">
          <% if count == 0 -%>
            <div class="info-box">
          <% elsif count == 1 -%>
            <div class="info-box mb-3">
          <% elsif count == 2 -%>
            <div class="info-box mb-3">
          <% elsif count == 3 -%>
            <div class="info-box mb-3">
          <% end -%>
            <span class="info-box-icon bg-<%= colors[count] %> elevation-1"><i class="fas fa-bed"></i></span>
            <div class="info-box-content">
              <span class="info-box-text"><%= item["tag"] %></span>
              <span class="info-box-number"><%= item["value"] %></span>
            </div>
          </div>
        </div>
        <% count = count + 1 -%>
        <% count = 0 if count == 3 -%>
      <% end -%>

    </div>




  </div><!--/. container-fluid -->
</section>
