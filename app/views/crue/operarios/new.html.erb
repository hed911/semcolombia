<%= form_tag(crue_operarios_path, method: "post",  :multipart => true, "data-ajax" => "false" ) do %>
<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"></h3>
	</div>
	<div class="panel-body">
		<h1>Creacion Notificador</h1>

		<ol class="breadcrumb">
		  <li class="active"><%= link_to "Escenarios Deportivos", crue_operarios_path %></li>
		</ol>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:nombre, "Nombre:") %>
				</br>
				<%= text_field_tag(:nombre, nil, required:true, class:"form-control") %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:cedula, "Cédula:") %>
				</br>
				<%= text_field_tag(:cedula, nil, required:false, class:"form-control") %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:email, "Email:") %>
				</br>
				<%= text_field_tag(:email, nil, :minlength => 8, required:true, class:"form-control") %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:password, "Contraseña:") %>
				</br>
				<%= password_field_tag(:password, nil, :minlength => 8, required:true, class:"form-control") %>
			</div>
		</div>

		<%= submit_tag("Crear") %>
	</div>
</div>

<% end %>
