<%= form_tag(crue_intension_path, method: "patch",  :multipart => true, "data-ajax" => "false" ) do %>
<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"></h3>
	</div>
	<div class="panel-body">
		<h1>Edicion Intencion</h1>

		<ol class="breadcrumb">
		  <li class="active"><%= link_to "Intenciones", crue_intensions_path %></li>
		</ol>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:nombre, "Nombre:") %>
				</br>
				<%= text_field_tag(:nombre, @intension.nombre, required:true, class:'form-control') %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-3">
				<%= label_tag(:crea_casos, "Crea casos COVID:") %>
				</br>
				<%= check_box_tag 'crea_casos', '1', @intension.crea_casos %>
			</div>
		</div>

		<%= submit_tag("Guardar Cambios") %>
	</div>
</div>
<% end %>
