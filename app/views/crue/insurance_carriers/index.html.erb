<%= link_to new_crue_insurance_carrier_path, :title => "Nueva aseguradora", :class => "btn btn-primary btn-lg" do %>
  Nueva Aseguradora
<% end %>


<%= form_tag(export_xls_crue_insurance_carriers_path, method: "post",  :multipart => true, "data-ajax" => "false" ) do %>
<h1>Aseguradoras</h1>
<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"></h3>
	</div>
	<div class="panel-body">
		<div class="table-responsive">
			<table id="table-result" class="table table-bordered table-hover table-striped tablesorter">
			  <thead>
			    <tr>
					<th data-sort="string">Codigo</th>
					<th data-sort="string">Nombre</th>
					<th>Acción</th>
			    </tr>
			  </thead>
			  <tbody id="table-result-body">
					<% @insurance_carriers.each do |insurance_carrier| -%>
						<tr class="">
							<td><%= insurance_carrier.codigo %></td>
					    <td><%= insurance_carrier.nombre %></td>
							<td>
								<%= link_to edit_crue_insurance_carrier_path(insurance_carrier.id), :title => "Editar EAPB", :class => "btn btn-xs btn-success" do %>
									<i class="fa fa-pencil-square-o"></i> Editar
							  <% end %>

								<%= link_to crue_insurance_carrier_path(insurance_carrier.id), class:"btn btn-xs btn-success", method: :delete, title:"Borrar EAPB", :data => { :confirm => 'Estas seguro? Este cambio no se puede revertir' } do %>
									<i class="fa fa-trash-o"></i> Borrar
							  <% end %>
							</td>
						</tr>
					<% end -%>
			  </tbody>
			</table>
		</div>
	</div>
</div>
	<% if false -%>
		<%= submit_tag "✓Exportar Datos", :name => 'export_data' %>
	<% end -%>
<% end %>
