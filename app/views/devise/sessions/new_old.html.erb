<style>
  body {
    font-family: "Lato", sans-serif;
  }
  .main-head{
    height: 150px;
    background: #FFF;
  }
  .sidenav {
    height: 100%;
    background-color: #000;
    overflow-x: hidden;
    padding-top: 20px;
  }
  .main {
    padding: 0px 10px;
  }
  @media screen and (max-height: 450px) {
    .sidenav {padding-top: 15px;}
  }
  @media screen and (max-width: 450px) {
    .login-form{
      margin-top: 10%;
    }

    .register-form{
      margin-top: 10%;
    }
  }
  @media screen and (min-width: 768px){
    .main{
      margin-left: 40%;
    }
    .sidenav{
      width: 40%;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
    }
    .login-form{
      margin-top: 80%;
    }
    .register-form{
      margin-top: 20%;
    }
  }
  .login-main-text{
    margin-top: 20%;
    padding: 60px;
    color: #fff;
  }
  .login-main-text h2{
    font-weight: 300;
  }
  .btn-black{
    background-color: #000 !important;
    color: #fff;
  }
</style>

<div id="session-width-body" class="sidenav">
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <form class="col-12">
        <div class="text-center">

        </div>
      </form>
    </div>
  </div>
</div>
<div class="main">

  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
        <h2 style="color:white;" class="text-center">Iniciar Sesion</h2>
        </br>
        <%= f.email_field :email, { :class => "form-control form-component", autofocus: true, placeholder: "Email" } %>
        <%= f.password_field :password, { :class=>"form-control form-component", autocomplete: "off", placeholder: "ContraseÃ±a" }  %>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %><label class="white-fonted" for="usuario_remember_me">	&nbsp;Recordarme</label>
        <% end -%>
        <%= f.submit "Ingresar", { :class => "btn btn-lg btn-custom-red btn-block" } %>
        <%= #render "devise/shared/links"
        %>
      <% end %>

    </div>
  </div>
</div>
