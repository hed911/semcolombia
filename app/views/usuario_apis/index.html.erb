<%= link_to new_usuario_api_path, :class => "btn btn-primary btn-lg", :title => "Nueva intencion" do %>
	Nueva cuenta API
<% end %>

<%= form_tag("#", method: "post",  :multipart => true, "data-ajax" => "false" ) do %>
<h1>Cuentas API</h1>
<div class="panel panel-danger">
	<div class="panel-heading">
		<h3 class="panel-title"></h3>
	</div>
	<div class="panel-body">
		<div class="table-responsive">
			<table id="table-result" class="table table-bordered table-hover table-striped tablesorter">
			  <thead>
			    <tr>
						<th data-sort="string">Id</th>
						<th data-sort="string">Nombre</th>
						<th data-sort="string">Token</th>
						<th data-sort="string">Version</th>
						<th data-sort="string">Departamento</th>
						<th data-sort="string">Municipio</th>
			      <th>Acción</th>
			    </tr>
			  </thead>
			  <tbody id="table-result-body">
					<% @usuarios.each do |usuario| -%>
						<tr class="">
							<td><%= usuario.id %></td>
					    <td><%= usuario.nombre %></td>
							<td><%= usuario.username %></td>
							<td><%= usuario.version %></td>
							<td><%= usuario.departamento.nombre if usuario.departamento %></td>
							<td><%= usuario.municipio.nombre if usuario.municipio %></td>
							<td>
								<%= link_to edit_usuario_api_path(usuario.id), :title => "Editar Cuenta", :class => "btn btn-xs btn-success" do %>
									<i class="fa fa-pencil-square-o"></i> Editar
							  <% end %>
								<%= link_to usuario_api_path(usuario.id), class:"btn btn-xs btn-success", method: :delete, title:"Borrar Cuenta", :data => { :confirm => 'Estas seguro? Este cambio no se puede revertir' } do %>
									<i class="fa fa-trash-o"></i> Borrar
								<% end %>
							</td>
						</tr>
					<% end -%>
			  </tbody>
			</table>
		</div>
	</div>
</div>
	<% if false -%>
		<%= submit_tag "✓Exportar Datos", :name => 'export_data' %>
	<% end -%>
<% end %>



<!-- ==========-=-=-=-=-=-=-=-=-=-= MODAL AGREGAR USUARIO =-=-=-=-=-=-=-=-=-=-========== -->
	<div class="modal fade" id="add-usuario-api" tabindex="-1" role="dialog" aria-labelledby="add-edit-Label" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
					<h4 class="modal-title text-center" id="add-table-Label">Nueva cuenta API</h4>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
	      </div>
	      <div class="modal-body">
	        <%= form_tag(usuario_apis_path, method: "post", :multipart => true, "data-ajax" => "false" ) do %>

	          <div class="row">

							<div class="col-md-12">
	              <div class="form-group">
	                <p class="control-label">Nombre</p>
	                <%= text_field_tag(:nombre, "", :required => true, :class =>"form-control") %>
	              </div>
	            </div>

							<div class="col-md-12">
	              <div class="form-group">
	                <p class="control-label">Departamento</p>
	                <%= select_tag "departamento_id", options_for_select(@departamentos.collect{ |departamento| [departamento.nombre, departamento.id] }, nil), { include_blank:true, id:'departamentos_select', disabled:false, required:true, class:'form-control' } %>
	              </div>
	            </div>

							<div class="col-md-12">
	              <div class="form-group">
	                <p class="control-label">Municipio</p>
	                <%= select_tag "municipio_id", options_for_select(@municipios.collect{ |municipio| [municipio.nombre, municipio.id] }, nil), { id:'municipios_select', disabled:false, required:true, class:'form-control'} %>
	              </div>
	            </div>

	            <div class="col-md-12">
	              <div class="form-group">
									<%= submit_tag "Crear", :class => "btn btn-default form-control" %>
	              </div>
	            </div>

	          </div>

	        <% end %>

	      </div>
	    </div>
	  </div>
	</div>
