<!-- ==========-=-=-=-=-=-=-=-=-=-= MODAL SEGUIMIENTOS =-=-=-=-=-=-=-=-=-=-========== -->
<div class="modal fade" id="recibir-muestra" tabindex="-1" role="dialog" aria-labelledby="seguimientos" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class='col-12 modal-title text-center'>
          Recepcion de muestra <%= @muestra.id %>
          <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
            <span aria-hidden='true'>&times;</span>
          </button>
        </h3>
      </div>
      <div class="modal-body">
        <%= form_tag(do_recibir_laboratorio_test_path(@muestra.id), method: "put", remote:true, :multipart => true, "data-ajax" => "false" ) do %>
          <div class="row">
            <div class="container card-group">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"></h5>
                  <div>
                    <div class="form-group">
                      <p class="control-label">Fecha recepcion</p>
                      <input id="fecha_recepcion" name="fecha_recepcion" type="datetime-local" value="<%= @datetime %>" class="form-control" step="1" />
                    </div>
                    <div class="form-group">
                      <p class="control-label">Estado muestra</p>
                      <select id="estado" name="estado" required class="form-control">
                        <option value></option>
                        <option value="1">Aceptada</option>
                        <option value="2">Rechazada</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <p class="control-label">Observaciones</p>
                      <%= text_area_tag(:observaciones, @muestra.observaciones, size: "30x4", class:'form-control') %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-12">
              <div class="text-center">
                <%= submit_tag "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Guardar Cambios&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;".html_safe, :class => "btn btn-lg btn-primary" %>
              </div>
            </div>

          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<!-- =-=-=-=-=-=-=-=-=-=-========== MODAL SEGUIMIENTOS ==========-=-=-=-=-=-=-=-=-=-= -->
