<%= link_to "Nueva Categoria", new_categoria_glosario_path, :class => "btn btn-danger" %>
<h1>Categorias Glosario</h1>
<%= form_tag(export_xls_categoria_glosarios_path, method: "post",  :multipart => true, "data-ajax" => "false" ) do %>
	<div class="panel panel-danger">
		<div class="panel-heading">
			<h3 class="panel-title"></h3>
		</div>
		<div class="panel-body">
			<div class="table-responsive">
				<table id="table-result" class="table table-bordered table-hover table-striped tablesorter">
				  <thead>
				    <tr>
				      <th data-sort="int">#</th>
				      <th data-sort="string">Nombre</th>
				      <th>Acción</th>
				      <th>Acción</th>
				    </tr>
				  </thead>
				  <tbody id="table-result-body">
				  	<% count = 0 -%>
						<% @categorias.each do |categoria| -%>
							<% count += 1 -%>
							<tr>
								<td><%= count %></td>
							    <td><%= categoria.nombre %></td>
									<td><%= link_to '<i class="fa fa-pencil-square-o"></i> Editar'.html_safe, edit_categoria_glosario_path(categoria.id), :class => "btn btn-default" %></td>
									<td><%= link_to '<i class="fa fa-trash-o"></i> Borrar'.html_safe, categoria_glosario_path(categoria.id), method: :delete, :class => "btn btn-default", :data => { :confirm => 'Estas seguro? Este cambio no se puede revertir' } %></td>
							</tr>
						<% end -%>
				  </tbody>
				</table>
			</div>
		</div>
	</div>
	<%= submit_tag "✓Exportar Datos", :name => 'export_data' %>
<% end %>
