

<!-- ==========-=-=-=-=-=-=-=-=-=-= MODAL EDITAR COBERTURA =-=-=-=-=-=-=-=-=-=-========== -->
	<div class="modal fade" id="edit-cobertura" tabindex="-1" role="dialog" aria-labelledby="add-edit-Label" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	        <h4 class="modal-title text-center" id="add-table-Label">Edicion Cobertura</h4>
	      </div>
	      <div class="modal-body">
	        <%= form_tag(update_zonas_municipio_path, method: "put", :multipart => true, "data-ajax" => "false", :remote => true, id:'editar_cobertura_form' ) do %>

	          <div class="row">

							<div class="col-md-12">
								<div style='width: 100%; height: 400px;'>
								  <div id="map_interno" style='width: 100%; height: 400px;'></div>
								</div>
							</div>
							<%= hidden_field_tag :zonas, nil %>

	            <div class="col-md-12">
	              <div class="form-group">
                  <%= submit_tag("Actualizar", :id => "create_btn", :class => "btn btn-primary form-control", data: { disable_with: 'Actualizando datos ...' }) %>
	              </div>
	            </div>

	          </div>

	        <% end %>

	      </div>
	    </div>
	  </div>
	</div>
<!-- =-=-=-=-=-=-=-=-=-=-========== /MODAL EDITAR COBERTURA ==========-=-=-=-=-=-=-=-=-=-= -->
