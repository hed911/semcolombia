          </div>
          <div class="panel-body">
            <div>
              <div class="option">
                <%= text_field_tag(:numero_documento_search, nil, placeholder:"Numero documento", class:'form-control', style:"text-transform: uppercase; text-align: center;") %>
              </div>
            </div>
          </div>
        </div>
      </div>
